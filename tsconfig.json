{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./*"],
      "@common/*": ["./backend/common/*"],
      "@auth/*": ["./backend/auth/*"],
      "@paciente/*": ["./backend/paciente/*"],
      "@filantropo/*": ["./backend/filantropo/*"],
      "@representante/*": ["./backend/representante/*"],
      "@serviciosMedicos/*": ["./backend/serviciosMedicos/*"],
      "@services/*": ["./services/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "pages/trabajaNosotros.jsx",
    "pages/registro",
    "pages/login.jsx",
    "pages/index.jsx",
    "pages/_document.jsx",
    "pages/verifiedAccount/_app.jsx",
    "hooks/useFormData.js",
    "utils/validateUser.js",
    "middleware.js",
    "utils/validateRolPages.js",
    "utils/validateRolPages.js",
    "utils/enablePagesEnum.js",
    "utils/validateRolPages.js",
    "pages/loginAdmin",
    "pages/api/verifiedAccountByToken/[token].js",
    "backend/infrastructure/servicesV2/pacientes/findAllPacientests",
    "pages/api/auth/[...nextauth]"
  ],
  "exclude": ["node_modules"]
}
